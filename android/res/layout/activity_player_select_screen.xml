<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <variable
        name="viewModel"
        type="com.cs2340team7.project.viewmodels.PlayerSelectViewModel" />
  </data>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".views.PlayerSelectScreen">

    <ImageView
        android:id="@+id/wallpaperImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/playerselectscreen"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/nameTextView3"
        android:layout_width="148dp"
        android:layout_height="29dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="388dp"
        android:text="General Gabe"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTextView2"
        android:layout_width="196dp"
        android:layout_height="29dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="388dp"
        android:text="The Purple Persian"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Choose your Character"
        android:textColor="#FF9800"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="196dp"
        android:layout_height="29dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="192dp"
        android:text="Sword Master Sid"
        android:textColor="#FF9800"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/character1Button"
        android:layout_width="204dp"
        android:layout_height="196dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="224dp"
        android:background="@null"
        android:onClick="onCharacterButtonClick"
        android:scaleType="fitCenter"
        android:src="@drawable/swordmastersid"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/character2Button"
        android:layout_width="204dp"
        android:layout_height="196dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="420dp"
        android:background="@null"
        android:onClick="onCharacterButtonClick"
        android:scaleType="fitCenter"
        android:src="@drawable/generalgabe"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/character3Button"
        android:layout_width="204dp"
        android:layout_height="196dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="420dp"
        android:background="@null"
        android:onClick="onCharacterButtonClick"
        android:scaleType="fitCenter"
        android:src="@drawable/thepurplepersian"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>